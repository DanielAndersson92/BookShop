<?xml version='1.0' encoding='UTF-8'?>

<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    <application>
	  <message-bundle>
	  </message-bundle>
     </application>
    <navigation-rule>
        <from-view-id>*</from-view-id> 
        <navigation-case>
            <from-outcome>start</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>mypage</from-outcome>
            <to-view-id>/jsf/Secured/mypage.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>search</from-outcome>
            <to-view-id>/jsf/Search/search.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>forum</from-outcome>
            <to-view-id>/jsf/Forum/forum.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>about</from-outcome>
            <to-view-id>/jsf/About/about.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/jsf/Login/login.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>register</from-outcome>
            <to-view-id>/jsf/Login/register.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>sendpm</from-outcome>
            <to-view-id>/jsf/Secured/PM/pm.xhtml</to-view-id>
        </navigation-case><navigation-case>
            <from-outcome>user</from-outcome>
            <to-view-id>/jsf/Other/userpage.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule> 
    <navigation-rule>
        <from-view-id>/jsf/Secured/mypage.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>add</from-outcome>
            <to-view-id>/jsf/Secured/addBook.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <validator>
        <validator-id>passwordValidator</validator-id>
        <validator-class>group20.jsf.utils.PasswordValidator</validator-class>
    </validator>
    <validator>
        <validator-id>emailValidator</validator-id>
        <validator-class>group20.jsf.utils.EmailValidator</validator-class>
    </validator>
    <validator>
        <validator-id>CIDValidator</validator-id>
        <validator-class>group20.jsf.utils.CIDValidator</validator-class>
    </validator>
</faces-config>
